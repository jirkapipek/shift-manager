{
  "name": "shift_manager",
  "version": "1.0.0",
  "description": "Shift Manager",
  "main": "app.js",
  "scripts": {
    "client-install": "npm install --prefix ../frontend",
    "start": "node app.js",
    "server": "nodemon app.js",
